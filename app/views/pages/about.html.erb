<div class="app-card-container">
	<div class="card">
		<h1>About Me</h1>

		<hr>

		<div class="row">
			<div class="col-md-4">
				<%= image_tag "http://via.placeholder.com/300x400", width: 300, alt: "Profile Image", class: 'profile-img'  %>
			</div>
			<div class="col-md-8">
				<p>Find me in app/views/pages/about.html.erb</p>


				<p>
					<button
						class="btn btn-primary"
						type="button"
						data-toggle="collapse"
						data-target="#jobHistory"
						aria-expanded="false"
						aria-controls="jobHistory"
						>
							Job History
					</button>
					<button
						class="btn btn-primary"
						type="button"
						data-toggle="collapse"
						data-target="#education"
						aria-expanded="false"
						aria-controls="education"
						>
							Education
					</button>
				</p>
				<p>
					<div class="collapse" id="jobHistory">
						<div class="card card-block">
							Jobs 1
						</div>
						<div class="card card-block">
							Jobs 2
						</div>
						<div class="card card-block">
							Jobs 3
						</div>
					</div>
					
					<div class="collapse" id="education">
						<div class="card card-block">
							School 1
						</div>
						<div class="card card-block">
							School 2
						</div>
						<div class="card card-block">
							School 3
						</div>
					</div>
				</p>
			</div>
		</div>
	</div>
</div>

